<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Order_page"
    android:background="@drawable/order_details"
    android:backgroundTintMode="src_over"
    android:backgroundTint="#aa000000">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#673AB7"
        android:backgroundTintMode="screen"
        android:fontFamily="@font/lobster_two_bold_italic"
        android:shadowColor="#E35858"
        android:text="PIZZA HUT"
        android:textAlignment="center"
        android:textColor="#F44336"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.085" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:fontFamily="@font/lora_italic"
        android:text="Bill Details"
        android:textAlignment="center"
        android:textColor="#ffff"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.005" />


    <Button
        android:id="@+id/buttonone"
        android:layout_width="290dp"
        android:layout_height="85dp"
        android:background="@drawable/round_btn"
        android:fontFamily="@font/lora_italic"
        android:text="Order Now"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.652"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintVertical_bias="0.906" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="93dp"
        android:layout_height="39dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="350dp"
        android:fontFamily="@font/amita"
        android:text="Name -"
        android:textAlignment="center"
        android:textColor="#F4F1F2"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonone"
        app:layout_constraintEnd_toStartOf="@+id/per_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintVertical_bias="0.032" />

    <TextView
        android:id="@+id/per_name"
        android:layout_width="221dp"
        android:layout_height="43dp"
        android:layout_marginEnd="32dp"
        android:fontFamily="@font/amita"
        android:text="Name Of Person"
        android:textAlignment="viewStart"
        android:textColor="#FDFDFD"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintVertical_bias="0.054" />

    <TextView
        android:id="@+id/phone_no"
        android:layout_width="120dp"
        android:layout_height="43dp"
        android:fontFamily="@font/amita"
        android:text="Phone No. -"
        android:textAlignment="center"
        android:textColor="#F4F1F2"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.054"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        app:layout_constraintVertical_bias="0.023" />

    <TextView
        android:id="@+id/per_phoneno"
        android:layout_width="221dp"
        android:layout_height="48dp"
        android:fontFamily="@font/amita"
        android:text="phone Of Person"
        android:textAlignment="textStart"
        android:textColor="#FDFDFD"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.222"
        app:layout_constraintStart_toEndOf="@+id/phone_no"
        app:layout_constraintTop_toBottomOf="@+id/per_name"
        app:layout_constraintVertical_bias="0.009" />

    <TextView
        android:id="@+id/address"
        android:layout_width="92dp"
        android:layout_height="42dp"
        android:fontFamily="@font/amita"
        android:text="Address -"
        android:textAlignment="center"
        android:textColor="#F4F1F2"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.061"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phone_no"
        app:layout_constraintVertical_bias="0.076" />

    <TextView
        android:id="@+id/per_address"
        android:layout_width="256dp"
        android:layout_height="47dp"
        android:fontFamily="@font/amita"
        android:text="Address Of Person"
        android:textColor="#FDFDFD"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/address"
        app:layout_constraintTop_toBottomOf="@+id/per_phoneno"
        app:layout_constraintVertical_bias="0.061" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="143dp"
        android:layout_height="45dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/amita"
        android:text="Quantity -"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.058"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/address"
        app:layout_constraintVertical_bias="0.028" />

    <TextView
        android:id="@+id/cash_details"
        android:layout_width="168dp"
        android:layout_height="42dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/amita"
        android:text="Cash Of Person"
        android:textColor="#FDFDFD"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.357"
        app:layout_constraintStart_toEndOf="@+id/textView10"
        app:layout_constraintTop_toBottomOf="@+id/per_address" />


</androidx.constraintlayout.widget.ConstraintLayout>