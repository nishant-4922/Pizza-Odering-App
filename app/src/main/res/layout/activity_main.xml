<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:backgroundTintMode="src_over"
    android:background="@drawable/logo"
    android:backgroundTint="#aa000000">



   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:fillViewport="true">


       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <TextView
               android:id="@+id/textView1"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:backgroundTint="#673AB7"
               android:backgroundTintMode="screen"
               android:fontFamily="@font/lobster_two_bold_italic"
               android:shadowColor="#E35858"
               android:text="@string/pizza_hut"
               android:textAlignment="center"
               android:textColor="#F44336"
               android:textSize="50sp"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintHorizontal_bias="0.0"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintVertical_bias="0.024" />



           <EditText
               android:id="@+id/editText"
               android:layout_width="300dp"
               android:layout_height="wrap_content"
               android:layout_marginStart="16dp"
               android:background="@drawable/search_bg"
               android:backgroundTint="#44454C"
               android:drawableRight="@drawable/ic_baseline_search_24"
               android:drawablePadding="10dp"
               android:padding="15dp"
               android:text="Search Your Pizza Here"
               android:textColor="@color/white"
               android:textColorHint="@color/white"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintVertical_bias="0.127" />


           <ImageView
               android:layout_width="74dp"
               android:layout_height="56dp"
               android:background="@drawable/search_bg"
               android:src="@drawable/account"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintHorizontal_bias="1.0"
               app:layout_constraintStart_toEndOf="@+id/editText"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintVertical_bias="0.127" />


           <TextView
               android:id="@+id/textView"
               android:layout_width="220dp"
               android:layout_height="47dp"
               android:layout_marginTop="8dp"
               android:fontFamily="@font/lora_italic"
               android:text="Hello Akash"
               android:textColor="@color/white"
               android:textSize="33dp"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintHorizontal_bias="0.159"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/editText"
               app:layout_constraintVertical_bias="0.0" />


           <ImageView
               android:id="@+id/ver_img"
               android:layout_width="410dp"
               android:layout_height="180dp"
               android:layout_marginTop="12dp"
               android:layout_marginBottom="274dp"
               android:padding="6dp"
               android:scaleType="fitXY"
               android:src="@drawable/imagecard"
               app:flow_horizontalAlign="center"
               app:flow_verticalAlign="center"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintHorizontal_bias="1.0"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/textView"
               app:layout_constraintVertical_bias="0.0" />


           <androidx.constraintlayout.widget.ConstraintLayout
               android:id="@+id/constrainlayout"
               android:layout_width="409dp"
               android:layout_height="83dp"
               android:background="@drawable/round_card"
               android:backgroundTint="#aa000000"
               app:layout_constraintBottom_toBottomOf="@+id/ver_img"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintHorizontal_bias="1.0"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="@+id/ver_img"
               app:layout_constraintVertical_bias="0.907">

               <TextView
                   android:id="@+id/name1"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:fontFamily="@font/amita"
                   android:text="Veg Pizza"
                   android:textColor="@color/white"
                   android:textSize="20dp"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintHorizontal_bias="0.112"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintVertical_bias="0.137" />

               <RatingBar
                   android:id="@+id/ratingBar"
                   android:layout_width="180dp"
                   android:layout_height="43dp"
                   android:contentDescription="@string/appbar_scrolling_view_behavior"
                   android:rating="4.5"
                   android:scaleX=".5"
                   android:scaleY=".5"
                   android:scrollbarAlwaysDrawHorizontalTrack="true"
                   android:scrollbarAlwaysDrawVerticalTrack="true"
                   android:scrollbarSize="1dp"
                   android:stepSize="0.1"
                   app:flow_horizontalAlign="start"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintHorizontal_bias="1.0"
                   app:layout_constraintStart_toEndOf="@+id/name1"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintVertical_bias="0.063" />

               <TextView
                   android:id="@+id/textView6"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:drawableLeft="@drawable/ic_baseline_access_time_filled_24"
                   android:drawablePadding="6dp"
                   android:fontFamily="@font/lobster_two_bold_italic"
                   android:text="10:00 to 23:00"
                   android:textColor="@color/white"
                   android:textSize="15dp"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintHorizontal_bias="0.109"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toBottomOf="@+id/name1"
                   app:layout_constraintVertical_bias="0.7" />

               <TextView
                   android:layout_width="101dp"
                   android:layout_height="27dp"
                   android:fontFamily="@font/lora_italic"
                   android:text="Min $34"
                   android:textColor="@color/white"
                   android:textSize="18dp"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintHorizontal_bias="0.884"
                   app:layout_constraintStart_toEndOf="@+id/textView6"
                   app:layout_constraintTop_toBottomOf="@+id/ratingBar"
                   app:layout_constraintVertical_bias="0.647" />


           </androidx.constraintlayout.widget.ConstraintLayout>

           <ImageView
               android:id="@+id/ver_img2"
               android:layout_width="413dp"
               android:layout_height="205dp"
               android:padding="7dp"
               android:scaleType="fitXY"
               android:src="@drawable/picture5"
               app:flow_horizontalAlign="center"
               app:flow_verticalAlign="center"
               app:layout_constraintBottom_toTopOf="@+id/ver_img1"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/constrainlayout"
               app:layout_constraintVertical_bias="0.0" />

           <androidx.constraintlayout.widget.ConstraintLayout
               android:id="@+id/constrainlayout2"
               android:layout_width="409dp"
               android:layout_height="83dp"
               android:background="@drawable/round_card"
               android:backgroundTint="#aa000000"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintHorizontal_bias="1.0"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/ver_img"
               app:layout_constraintVertical_bias="0.313">

               <TextView
                   android:id="@+id/name2"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:fontFamily="@font/amita"
                   android:text="Paneer Pizza"
                   android:textColor="@color/white"
                   android:textSize="20dp"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintHorizontal_bias="0.112"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintVertical_bias="0.137" />

               <RatingBar
                   android:id="@+id/ratingBar2"
                   android:layout_width="180dp"
                   android:layout_height="43dp"
                   android:contentDescription="@string/appbar_scrolling_view_behavior"
                   android:rating="4.5"
                   android:scaleX=".5"
                   android:scaleY=".5"
                   android:scrollbarAlwaysDrawHorizontalTrack="true"
                   android:scrollbarAlwaysDrawVerticalTrack="true"
                   android:scrollbarSize="1dp"
                   android:stepSize="0.1"
                   app:flow_horizontalAlign="start"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintHorizontal_bias="1.0"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintVertical_bias="0.063" />

               <TextView
                   android:id="@+id/textView4"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:drawableLeft="@drawable/ic_baseline_access_time_filled_24"
                   android:drawablePadding="6dp"
                   android:fontFamily="@font/lobster_two_bold_italic"
                   android:text="10:00 to 20:00"
                   android:textColor="@color/white"
                   android:textSize="15dp"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintHorizontal_bias="0.109"
                   app:layout_constraintStart_toStartOf="parent" />

               <TextView
                   android:layout_width="101dp"
                   android:layout_height="27dp"
                   android:fontFamily="@font/lora_italic"
                   android:text="Min $40"
                   android:textColor="@color/white"
                   android:textSize="18dp"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintEnd_toEndOf="parent" />


           </androidx.constraintlayout.widget.ConstraintLayout>

           <ImageView
               android:id="@+id/ver_img1"
               android:layout_width="414dp"
               android:layout_height="207dp"
               android:layout_marginBottom="16dp"
               android:padding="7dp"
               android:scaleType="fitXY"
               android:src="@drawable/picture4"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintHorizontal_bias="1.0"
               app:layout_constraintStart_toStartOf="parent" />

           <androidx.constraintlayout.widget.ConstraintLayout
               android:id="@+id/constrainlayout3"
               android:layout_width="409dp"
               android:layout_height="83dp"
               android:background="@drawable/round_card"
               android:backgroundTint="#aa000000"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintHorizontal_bias="1.0"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="@+id/ver_img1"
               app:layout_constraintVertical_bias="0.95">

               <TextView
                   android:id="@+id/name3"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:fontFamily="@font/amita"
                   android:text="Cheese Pizza"
                   android:textColor="@color/white"
                   android:textSize="20dp"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintHorizontal_bias="0.112"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintVertical_bias="0.137" />

               <RatingBar
                   android:id="@+id/ratingBa3"
                   android:layout_width="180dp"
                   android:layout_height="43dp"
                   android:contentDescription="@string/appbar_scrolling_view_behavior"
                   android:rating="4.5"
                   android:scaleX=".5"
                   android:scaleY=".5"
                   android:scrollbarAlwaysDrawHorizontalTrack="true"
                   android:scrollbarAlwaysDrawVerticalTrack="true"
                   android:scrollbarSize="1dp"
                   android:stepSize="0.1"
                   app:flow_horizontalAlign="start"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintVertical_bias="0.15" />

               <TextView
                   android:id="@+id/textView2"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:drawableLeft="@drawable/ic_baseline_access_time_filled_24"
                   android:drawablePadding="6dp"
                   android:fontFamily="@font/lobster_two_bold_italic"
                   android:text="10:00 to 23:00"
                   android:textColor="@color/white"
                   android:textSize="15dp"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintHorizontal_bias="0.109"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintVertical_bias="0.7" />

               <TextView
                   android:layout_width="101dp"
                   android:layout_height="27dp"
                   android:layout_marginEnd="16dp"
                   android:fontFamily="@font/lora_italic"
                   android:text="Min $50"
                   android:textColor="@color/white"
                   android:textSize="18dp"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintEnd_toEndOf="parent" />


           </androidx.constraintlayout.widget.ConstraintLayout>


       </androidx.constraintlayout.widget.ConstraintLayout>


   </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>